<% if(components.length) { %>
  <%- include('_object/_component/_page-header', { 'title': components[0].config.category[0] }) %>
<% } %>

<div class="sg-c-container">
  <div class="sg-c-row sg-c-row--margin-l">
    <div class="sg-c-row__col sg-c-row__col--1-1 sg-c-row__col--lg-3-4">
      <main id="main" class="sg-l-main" role="main">

        <% if(components.length) { %>

          <ul class="sg-p-table-of-contents">
            <% components.forEach(function(component) { %>
              <li class="sg-p-table-of-contents__item">
                <a href="#<%- component.config.name %>"><%- component.config.name %></a>
              </li>
            <% }) %>
          </ul>

          <% components.forEach(function(component) { %>
            <article class="sg-c-entry">
              <header class="sg-c-entry__header">
                <h2 class="sg-c-entry__title" id="<%- component.config.name %>"><%- component.config.name %></h2>
                <ul class="sg-c-meta">
                  <li class="sg-c-meta__item">
                    <%- component.sourcePath %>
                  </li>
                </ul>
              </header>
              <div class="sg-c-entry__content">
                <%- component.html %>
              </div>
            </article>
          <% }) %>
        <% } else { %>
          <article class="sg-c-entry">
            <div class="sg-c-entry__content">
              <%- html %>
            </div>
          </article>
        <% } %>

      </main>
    </div>
    <div class="sg-c-row__col sg-c-row__col--1-1 sg-c-row__col--lg-1-4 sg-u-hidden sg-u-visible-lg-up">
      <aside id="sub" class="sg-l-sub" role="complementary">
        <nav class="sg-p-local-nav">
          <%- include('sidemenu') %>
        </nav>
      </aside>
    </div>
  </div>
</div>

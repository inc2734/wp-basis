{
  "name": "inc2734/wp-basis",
  "description": "This library customizes HTML to use sass-basis in WordPress.",
  "license": "GPL-2.0-or-later",
  "require": {
    "php": ">=5.6"
  },
  "require-dev": {
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "yoast/phpunit-polyfills": "^1.0"
  },
  "authors": [
    {
      "name": "Takashi Kitajima",
      "email": "inc@2inc.org"
    }
  ],
  "autoload": {
    "psr-4" : {
      "Inc2734\\WP_Basis\\" : "src"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "./vendor/squizlabs/php_codesniffer/bin/phpcs",
    "format": "./vendor/squizlabs/php_codesniffer/bin/phpcbf"
  }
}
